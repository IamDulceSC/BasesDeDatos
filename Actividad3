USE tienda_acme_iniciales;
CREATE TABLE clientes(id_cliente char(20), nombre varchar(20), primer_apellido varchar(20), segundo_apellido varchar(20), telefono int(15), email varchar(35), id_direccion char(10) fecha_actualizacion timestamp);
CREATE TABLE direcciones(id_direccion char(20), calle varcahr(20), colonia varchar(20), cp integer(6), municipio varchar(40), estado varchar(30), pais varchar(30), fecha_actualizacion timestamp);
ALTER TABLE clientes ADD PRIMARY KEY id_cliente;
ALTER TABLE direcciones ADD PRIMARY KEY id_direccion;
ALTER TABLE clientes ADD FOREIGN KEY id_direccion;
