CREATE VIEW clientes_direcciones AS SELECT clientes.id_cliente, clientes.nombre, clientes.primer_apellido, clientes.segundo_apellido, clientes.email, clientes.telefono, direcciones.calle, direcciones.colonia, direcciones.cp, direcciones.estado, direcciones.pais, direcciones.municipio FROM clientes, direcciones WHERE clientes.id_direccion=direcciones.id_direccion;
